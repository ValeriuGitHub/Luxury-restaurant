mixin hours(background)
	div(class=`hours-wrapper hours-${background}`)
		.container
			.hours
				h2.medium-title.hours__title Opening Hours
				.hours__text
					.hours__text-top Monday to Friday
					.hours__text-bottom 10am - 10pm
				.hours__text
					.hours__text-top Saturday to Sunday
					.hours__text-bottom 09am - 11pm
				img(src="./img/hours/hours-right.jpg").hours__img
