.banner
	ul.banner__list
		+banner("Teast your fav dish", "first")
		+banner("Lorem Ipsum 2", "second")
		+banner("Lorem Ipsum 3", "third")
.banner-under
	.container
		.banner-under__wrapper
			.banner-explore
				img(src="./img/HomePage/explore.png").banner-explore__img
				.banner-explore__circle
					img(src="./img/HomePage/icon-food.png").banner-explore__icon
				.banner-explore__text Explore food Menu
			.banner-reviews
				img(src="./img/HomePage/icon-reviews.png").banner-reviews__icon
				h2.banner-under__title Read
					.banner-under__title_orange Reviews
				a(href="/").banner-reviews__circle
					i.fa.fa-angle-right.banner-reviews__angle-icon
			.banner-phone
				img(src="./img/HomePage/icon-phone.png").banner-phone__icon
				h2.banner-under__title Call us now for
					.banner-under__title_orange Home Delivery
				a(href="tel:+380634567890" target="_blank").Home-Page__phone.banner-phone__phone 1-008 005 006