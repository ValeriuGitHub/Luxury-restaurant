		.footer
			nav.footer-column.footer-navigation
				h2.footer__title.footer-navigation__title
					| Navigation
				ul.footer-navigation__list
					li.footer-navigation__item
						a(href="http://localhost:3000/index.html").footer-navigation__link Home
					li.footer-navigation__item
						a(href="http://localhost:3000/about-us.html").footer-navigation__link About us
					li.footer-navigation__item
						a(href="http://localhost:3000/menu.html").footer-navigation__link Menu
					li.footer-navigation__item
